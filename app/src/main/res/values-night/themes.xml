<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="SafelyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Brand color. -->
        <item name="colorPrimary">@color/tertiary_500</item>
        <item name="colorPrimaryVariant">@color/tertiary_500</item>
        <item name="colorOnPrimary">@color/neutral_light</item>
        <item name="colorSecondary">@color/tertiary_variant</item>
        <item name="colorSecondaryVariant">@color/secondary_500</item>
        <item name="colorOnSecondary">@color/neutral_dark</item>
        <item name="colorTertiary">@color/primary_500</item>
        <item name="colorTertiaryContainer">@color/tertiary_variant</item>
        <item name="colorOnTertiary">@color/icon</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Text. -->
        <item name="android:textColor">?attr/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Drawable -->
        <item name="android:drawableTint">?attr/colorPrimary</item>
    </style>

    <!-- Buttons. -->
    <style name="buttonsFull">
        <item name="colorPrimary">@color/tertiary_500</item>
        <item name="colorOnPrimary">@color/neutral_dark</item>
        <item name="colorSecondary">@color/secondary_500</item>
    </style>

    <style name="buttonsTransparents">
        <item name="colorPrimary">@color/tertiary_500</item>
        <item name="colorOnPrimary">@color/tertiary_500</item>
        <item name="colorSecondary">@color/secondary_500</item>
    </style>

    <style name="buttonsTertiary">
        <item name="colorPrimary">@color/tertiary_500</item>
        <item name="colorOnPrimary">@color/tertiary_500</item>
        <item name="colorSecondary">@color/neutral_dark</item>
    </style>

    <!-- Animations. -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>